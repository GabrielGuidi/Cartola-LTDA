<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Cartola</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass collapse" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="cargas">
                <span class="oi oi-cloud-download" aria-hidden="true"></span> Painel de cargas
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="mercado">
                <span class="oi oi-cart" aria-hidden="true"></span> Jogadores
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="parciais">
                <span class="oi oi-list" aria-hidden="true"></span> Parciais
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="apostas">
                <span class="oi oi-credit-card" aria-hidden="true"></span> Apostas
            </NavLink>
        </li>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
